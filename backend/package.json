{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "start": "ts-node main.ts",
    "start:dev": "nodemon --watch './**/*.ts' --exec 'ts-node main.ts'",
    "start:dev-swagger": "concurrently \"npm run start:dev\" \"nodemon -x tsoa spec\"",
    "swagger": "tsoa spec-and-routes && tsoa swagger && tsc",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --d src/config/ormconfig.ts",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm migration:run",
    "typeorm:create": "npm run typeorm migration:create -- -n"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.1",
    "express": "~4.16.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "nodemailer": "^6.7.5",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "swagger-express-ts": "^1.1.0",
    "swagger-ui-dist": "^4.12.0",
    "swagger-ui-express": "^4.4.0",
    "tsoa": "^4.1.0",
    "typeorm": "^0.3.6",
    "uuid4": "^2.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.0",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.16",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "tsup": "^6.1.2",
    "typescript": "^4.7.4"
  }
}
